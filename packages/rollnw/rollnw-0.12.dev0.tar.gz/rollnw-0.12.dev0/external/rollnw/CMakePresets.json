{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 21,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "linux",
            "displayName": "Default Config",
            "description": "Default build using Ninja",
            "binaryDir": "${sourceDir}/build",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": {
                    "value": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
                    "type": "FILEPATH"
                },
                "CMAKE_RUNTIME_OUTPUT_DIRECTORY": {
                    "value": "${sourceDir}/bin",
                    "type": "FILEPATH"
                },
                "ROLLNW_BUILD_BENCHMARKS": {
                    "type": "BOOL",
                    "value": "OFF"
                },
                "LUAU_BUILD_TESTS": {
                    "type": "BOOL",
                    "value": "OFF"
                }
            }
        },
        {
            "name": "ci-codeql",
            "inherits": "linux",
            "displayName": "ci-codeql",
            "description": "CodeQL build",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "ci-linux",
            "inherits": "linux",
            "displayName": "ci-linux",
            "description": "Default build with tests and code coverage, no python",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },
            "cacheVariables": {
                "ROLLNW_BUILD_TESTS": {
                    "type": "BOOL",
                    "value": "ON"
                }
            }
        },
        {
            "name": "ci-coverage-docs",
            "inherits": "linux",
            "displayName": "ci-coverage-docs",
            "description": "Default build with tests and code coverage, no python",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },
            "cacheVariables": {
                "CODE_COVERAGE": {
                    "type": "BOOL",
                    "value": "ON"
                },
                "ENABLE_SANITIZER_ADDRESS": {
                    "type": "BOOL",
                    "value": true
                },
                "ENABLE_SANITIZER_UNDEFINED_BEHAVIOR": {
                    "type": "BOOL",
                    "value": true
                },
                "ROLLNW_BUILD_DOCS": {
                    "type": "BOOL",
                    "value": true
                },
                "ROLLNW_BUILD_TESTS": {
                    "type": "BOOL",
                    "value": "ON"
                }
            }
        },
        {
            "name": "windows",
            "inherits": "linux",
            "generator": "Visual Studio 16 2019",
            "displayName": "Windows-only configuration",
            "description": "This build is only available on Windows",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "VCPKG_TARGET_TRIPLET": "x64-windows-static",
                "VCPKG_HOST_TRIPLET": "x64-windows-static"
            }
        },
        {
            "name": "ci-windows",
            "inherits": "windows",
            "generator": "Ninja",
            "displayName": "windows ci build",
            "description": "windows ci build",
            "cacheVariables": {
                "ROLLNW_BUILD_TESTS": {
                    "type": "BOOL",
                    "value": "ON"
                }
            }
        },
        {
            "name": "macos",
            "inherits": "linux",
            "displayName": "macOS default configuration",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            },
            "cacheVariables": {
                "CMAKE_OSX_DEPLOYMENT_TARGET": "10.15"
            }
        },
        {
            "name": "ci-macos",
            "inherits": "linux",
            "displayName": "macOS CI configuration",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            },
            "cacheVariables": {
                "ROLLNW_BUILD_TESTS": {
                    "type": "BOOL",
                    "value": "ON"
                }
            }
        }
    ],
    "buildPresets": [
        {
            "name": "default",
            "configurePreset": "linux"
        }
    ],
    "testPresets": [
        {
            "name": "default",
            "configurePreset": "linux",
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": true
            }
        }
    ]
}
