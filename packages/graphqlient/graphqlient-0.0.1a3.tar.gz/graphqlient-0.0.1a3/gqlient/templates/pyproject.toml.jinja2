[tool.poetry]
name = "{{ package_name }}"
version = "{{ version or '0.1.0' }}"
description = "{{ description or 'A GraphQLient instance' }}"
authors = [{% for author in authors %}"{{ author }}"{% endfor %}]
packages = [
    { include = "{{ include or '*' }}" }
]

[tool.poetry.dependencies]
python = "^3.9"
gql = {extras = ["aiohttp"], version = "^3.1.0"}

[build-system]
requires = ["poetry-core>=1.0.0"]
build-backend = "poetry.core.masonry.api"

